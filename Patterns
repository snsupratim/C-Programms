//1
//2 3
//4 5 6
//.....
#include <stdio.h>
int main() {
    int n, i,j,count = 1;

    printf("Enter the number of rows: ");
    scanf("%d", &n);

    for (i = 1; i <= n; i++) {
        for ( j = 1; j <= i; j++) {
            printf("%d ", count);
            count++;}
        printf("\n");}
     return 0;}


//a b c d e
 //f g h
  //i
//...
#include<stdio.h>
int main()
{
	char ltr= 'a';
	int i,j,s;
	for(i=0;i<3;i++)
	{
		for(j=0;j<i;j++)
		{
			printf(" ");
		}
		for(s=i;s<5-i;s++)
		{
			printf("%c ",ltr++);
		}
		printf("\n");
	}
	return 0;
}

